        }

        #generateKeyContainer,
        #canvasContainer,
        #toolbar {
            margin: 20px auto;
            width: 80%;
            max-width: 800px;
        }

        #screenKey {
            font-size: 18px;
            margin: 10px 0;
            font-weight: bold;
            color: green;
        }


        #canvasContainer {
            width: 100%;
            /* Set parent size as needed */
            height: 400px;
            /* Example height */
            position: relative;
            /* Ensure proper positioning */
            display: none;
            /* Hidden initially */
        }

        #canvas {
            width: 100%;
            height: 100%;
        }

        #toolbar {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;

        }

        .widget {
            margin: 10px;
            padding: 10px;
            background-color: #ccc;
            border-radius: 5px;
            cursor: pointer;
            width: 100px;
            text-align: center;
        }

        .widget:hover {
            background-color: #bbb;
        }

        #loading {
            text-align: center;
        }

        #previewContainer {
            display: none;
            /* Hide the preview by default */
            margin-top: 30px;
            text-align: center;
        }

        #previewContainer.visible {
            display: block;
            /* Show when active */
        }
    </style>
