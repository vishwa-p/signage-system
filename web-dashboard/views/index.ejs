            console.log('Connected to WebSocket server!');
            // Send saveCanvas data once connected

            const canvasData = JSON.stringify(canvas.toJSON());// Example canvasData

            socket.send(JSON.stringify({
                action: 'saveCanvas',
                screenKey,
